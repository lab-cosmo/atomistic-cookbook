UNITS LENGTH=Bohr ENERGY=Ha

cv: METATOMIC ...
    MODEL=custom-cv.pt
    EXTENSIONS_DIRECTORY=./extensions/
    SPECIES1=1-38
    SPECIES_TO_TYPES=18
...
cv1: SELECT_COMPONENTS ARG=cv COMPONENTS=1
cv2: SELECT_COMPONENTS ARG=cv COMPONENTS=2

mtd: METAD ...
    ARG=cv1,cv2
    HEIGHT=0.5
    PACE=50
    SIGMA=0.02,0.05
    GRID_MIN=-2,-2
    GRID_MAX=2,2
    GRID_BIN=500,500
    BIASFACTOR=5
    FILE=HILLS
    TEMP=0.1
...
PRINT ARG=cv.*,mtd.* STRIDE=10 FILE=COLVAR
FLUSH STRIDE=1
