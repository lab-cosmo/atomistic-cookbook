<simulation verbosity='low'>
  <output prefix='simulation'>
    <properties stride='5' filename='out'>  [ step, time{picosecond}, conserved{kelvin}, temperature{kelvin}, kinetic_md{kelvin}, potential{kelvin}, pressure_md{megapascal}] </properties>
    <trajectory stride='100' filename='pos' format='ase'>positions</trajectory>
    <checkpoint stride='2000'/>
  </output>
  <total_steps>1000</total_steps>
  <prng>
    <seed>3848</seed>
  </prng>
  <fflj name='lj' pbc='False'>
      <parameters> { eps:1.0, sigma:1.0 } </parameters>
  </fflj>
  <system>
    <initialize nbeads='1'>
      <file mode='ase'> init.xyz </file>
      <velocities mode='thermal' units='kelvin'> 80 </velocities>
    </initialize>
    <forces>
      <force name='zero' forcefield='lj'>  </force>
    </forces>
    <ensemble>
      <temperature units='kelvin'>39.36998597</temperature>
    </ensemble>
    <motion mode='dynamics'>
      <dynamics mode='nvt'>
        <thermostat mode='pile_g'>
          <tau units='femtosecond'>25</tau>
        </thermostat>
        <timestep units='femtosecond'>1.0</timestep>
      </dynamics>
      <fixcom>False</fixcom>
    </motion>
  </system>
</simulation>